<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Views.FoodPage"
             x:Name="this">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Yea, it is it"></Label>
            <ListView ItemsSource="{Binding Ingridients}"
                      BackgroundColor="{StaticResource BlockBackgroundColor}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Load" Command="{Binding LoadCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>