<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.UIComponents.TabsHeaderPanell"
             x:Name="this"
             xmlns:fa="clr-namespace:FontAwesome" >
    <ContentView.Content>
        <StackLayout>
            <Grid BindingContext="{x:Reference this}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Label x:Name="TitleLabel"
                       FontSize="24" 
                       FontAttributes="Bold"
                       Grid.Column="0" 
                       Margin="30,15,0,0"
                       TextColor="{StaticResource SecondaryColor}"
                       Text="{Binding PanellTitle}"
                       FontFamily="Comfortaa"></Label>
                <Button Grid.Column="1"
                        WidthRequest="50"
                        HeightRequest="50"
                        BorderRadius="25" 
                        HorizontalOptions="End" 
                        Margin="0,15,30,0"
                        BackgroundColor="{StaticResource BackgroundColor}"
                        BorderWidth="2"
                        BorderColor="{StaticResource SecondaryColor}">
                    <Button.ImageSource>
                        <FontImageSource 
                            FontFamily="IconsSolid" 
                            Glyph="{Static fa:FontAwesomeIcons.UserLarge}"
                            Color="{StaticResource TextColorDark}"/>
                    </Button.ImageSource>
                </Button>
                
            </Grid>
        </StackLayout>
    </ContentView.Content>
</ContentView>